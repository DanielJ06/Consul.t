<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ioasys.diversidade.ui.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_my_nav"
            app:destination="@id/my_nav"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true">

            <argument
                android:name="userId"
                app:argType="string"
                app:nullable="true" />

            <argument
                android:name="userName"
                app:argType="string"
                app:nullable="true" />

            <argument
                android:name="token"
                app:argType="string"
                app:nullable="true" />

        </action>
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <include app:graph="@navigation/my_nav" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.ioasys.diversidade.ui.fragments.RegisterFragment"
        android:label="RegisterFragment" />
</navigation>