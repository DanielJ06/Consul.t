<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ioasys.diversidade.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="userName"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="token"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_homeFragment_to_professionalFragment"
            app:destination="@id/professionalFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

    </fragment>
    <fragment
        android:id="@+id/professionalFragment"
        tools:layout="@layout/fragment_register"
        android:name="com.ioasys.diversidade.ui.fragments.ProfessionalFragment"
        android:label="ProfessionalFragment" >

        <argument
            android:name="token"
            app:argType="string"
            app:nullable="true" />

    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        tools:layout="@layout/fragment_profile"
        android:name="com.ioasys.diversidade.ui.fragments.ProfileFragment"
        android:label="ProfileFragment">

        <argument
            android:name="token"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true" />

    </fragment>
</navigation>